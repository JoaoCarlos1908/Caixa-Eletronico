<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cinza_ardosia"
    tools:context=".MainActivity">

    <View
        android:id="@+id/area_interna"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_margin="30dp"
        android:background="@color/cinza_grafite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/monitor"
        android:layout_width="260dp"
        android:layout_height="240dp"
        android:layout_margin="20dp"
        android:background="@color/azul_ceu"
        app:layout_constraintStart_toStartOf="@+id/area_interna"
        app:layout_constraintTop_toTopOf="@+id/area_interna" />

    <TextView
        android:id="@+id/text_titulo"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="Informe o valor do saque."
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/monitor"
        app:layout_constraintStart_toStartOf="@+id/monitor"
        app:layout_constraintTop_toTopOf="@+id/monitor" />

    <TextView
        android:id="@+id/edit_valor"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="R$2000,00"
        android:textColor="@color/black"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/monitor"
        app:layout_constraintStart_toStartOf="@+id/monitor"
        app:layout_constraintTop_toBottomOf="@+id/text_titulo" />

    <TextView
        android:id="@+id/nota200"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_margin="10dp"
        android:text="$200 = "
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/monitor"
        app:layout_constraintTop_toBottomOf="@id/text_titulo" />

    <TextView
        android:id="@+id/nota100"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_margin="10dp"
        android:layout_marginStart="20dp"
        android:text="$100 = "
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/monitor"
        app:layout_constraintTop_toBottomOf="@+id/nota200" />

    <TextView
        android:id="@+id/nota50"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_margin="10dp"
        android:layout_marginStart="20dp"
        android:text="$50 = "
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/monitor"
        app:layout_constraintTop_toBottomOf="@+id/nota100" />

    <TextView
        android:id="@+id/nota20"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_margin="10dp"
        android:layout_marginStart="20dp"
        android:text="$20 = "
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/monitor"
        app:layout_constraintTop_toBottomOf="@+id/nota50" />

    <TextView
        android:id="@+id/nota10"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_margin="10dp"
        android:layout_marginStart="20dp"
        android:text="$10 = "
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/nota200"
        app:layout_constraintTop_toBottomOf="@id/text_titulo" />

    <TextView
        android:id="@+id/nota5"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_margin="10dp"
        android:layout_marginStart="20dp"
        android:text="$5 = "
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/nota200"
        app:layout_constraintTop_toBottomOf="@+id/nota10" />

    <TextView
        android:id="@+id/nota2"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_margin="10dp"
        android:layout_marginStart="20dp"
        android:text="$2 = "
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/nota200"
        app:layout_constraintTop_toBottomOf="@+id/nota5" />

    <View
        android:id="@+id/area_saque"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="70dp"
        android:background="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/monitor" />

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginStart="95dp"
        android:layout_marginEnd="95dp"
        android:background="@color/verde"
        app:layout_constraintBottom_toBottomOf="@+id/area_saque"
        app:layout_constraintTop_toTopOf="@+id/area_saque" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_mon01"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginTop="80dp"
        android:background="@color/cinza_claro"
        app:layout_constraintEnd_toEndOf="@+id/area_interna"
        app:layout_constraintStart_toEndOf="@+id/monitor"
        app:layout_constraintTop_toTopOf="@+id/monitor" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_mon02"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@color/cinza_claro"
        app:layout_constraintEnd_toEndOf="@+id/area_interna"
        app:layout_constraintStart_toEndOf="@+id/monitor"
        app:layout_constraintTop_toBottomOf="@+id/btn_mon01" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_reset"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@color/cinza_claro"
        android:text="reset"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/area_interna"
        app:layout_constraintStart_toEndOf="@+id/monitor"
        app:layout_constraintTop_toBottomOf="@+id/btn_mon02" />

    <View
        android:id="@+id/teclado"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="30dp"
        android:background="@color/cinza_grafite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/area_interna" />

    <com.google.android.material.circularreveal.CircularRevealGridLayout
        android:layout_width="270dp"
        android:layout_height="220dp"
        android:columnCount="4"
        android:rowCount="5"
        android:rowOrderPreserved="false"
        app:layout_constraintBottom_toBottomOf="@+id/teclado"
        app:layout_constraintEnd_toEndOf="@+id/teclado"
        app:layout_constraintStart_toStartOf="@+id/teclado"
        app:layout_constraintTop_toTopOf="@+id/teclado">


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_01"
            style="@style/button"
            android:text="1" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_02"
            style="@style/button"
            android:text="2" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_03"
            style="@style/button"
            android:text="3" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_cancelar"
            style="@style/button"
            android:layout_width="60dp"
            android:background="@color/vermelho"
            android:text="Cancelar"
            android:textSize="10sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_04"
            style="@style/button"
            android:text="4" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_05"
            style="@style/button"
            android:text="5" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_06"
            style="@style/button"
            android:text="6" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_apagar"
            style="@style/button"
            android:layout_width="60dp"
            android:background="@color/amarelo"
            android:text="Apagar"
            android:textSize="10sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_07"
            style="@style/button"
            android:text="7" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_08"
            style="@style/button"
            android:text="8" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_09"
            style="@style/button"
            android:text="9" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_confirmar"
            style="@style/button"
            android:layout_width="60dp"
            android:background="@color/verde"
            android:text="Confir"
            android:textSize="10sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/atoa"
            style="@style/button"
            android:background="@color/cinza_grafite" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_0"
            style="@style/button"
            android:text="0" />

    </com.google.android.material.circularreveal.CircularRevealGridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>